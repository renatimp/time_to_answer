<h1 class="page-header">Admins</h1>

<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Email</th>
                    <th><%= link_to "Novo", new_admins_backoffice_admin_path , class: "btn btn-success" , style: "width: 60px" %></th>

                </tr>
            </thead>
            <tbody>
              <% @admins.each do |admin| %>
                <tr>
                    <td><%= admin.id%></td>
                    <td><%= admin.email%></td>
                    <td style='width: 81px;'>
                      <%= link_to edit_admins_backoffice_admin_path(admin) , class: "btn btn-primary btn-circle" do  %>
                          <i class="fa fa-edit"></i>
                      <% end -%>
                      <button type="button" class="btn btn-danger btn-circle">
                        <i class="fa fa-trash"></i>
                      </button>
                    </td>
                </tr>
              <% end -%>
            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
</div>
