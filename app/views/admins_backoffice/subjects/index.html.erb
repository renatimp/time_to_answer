<h1 class="page-header">Assuntos/Áreas</h1>

<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Descrição </th>
                    <th><%= link_to "Novo", new_admins_backoffice_subject_path , class: "btn btn-success" , style: "width: 60px" %></th>

                </tr>
            </thead>
            <tbody>
              <% @subjects.each do |subject| %>
                <tr>
                    <td><%= subject.id%></td>
                    <td><%= subject.description%></td>
                    <td style='width: 81px;'>
                      <%= link_to edit_admins_backoffice_subject_path(subject) , class: "btn btn-primary btn-circle" do  %>
                          <i class="fa fa-edit"></i>
                      <% end -%>
                      <%= link_to admins_backoffice_subject_path(subject), class: "btn btn-danger btn-circle", data:{confirm: "Tem certeza?"},  method: :delete do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    </td>
                </tr>
              <% end -%>
            </tbody>
        </table>

        <div class="text-center">
          <%= paginate @subjects %>
        </div>

    </div>
    <!-- /.table-responsive -->
</div>
