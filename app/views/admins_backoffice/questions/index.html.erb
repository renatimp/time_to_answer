<h1 class="page-header">Perguntas </h1>

<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Descrição</th>
                    <th>Assunto</th>
                    <th><%= link_to "Novo", new_admins_backoffice_question_path , class: "btn btn-success" , style: "width: 60px" %></th>

                </tr>
            </thead>
            <tbody>
              <% @questions.each do |question|%>
                <tr>
                    <td><%= question.description.truncate(50) %></td>
                    <td><%= question.subject.description.truncate(30) %></td>
                    <td style='width: 81px;'>
                      <%= link_to edit_admins_backoffice_question_path(question) , class: "btn btn-primary btn-circle" do  %>
                          <i class="fa fa-edit"></i>
                      <% end -%>
                      <%= link_to admins_backoffice_question_path(question), class: "btn btn-danger btn-circle", data:{confirm: "Tem certeza?"},  method: :delete do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    </td>
                </tr>
              <% end -%>
            </tbody>
        </table>

        <div class="text-center">
          <%= paginate @questions %>
        </div>

    </div>
    <!-- /.table-responsive -->
</div>
