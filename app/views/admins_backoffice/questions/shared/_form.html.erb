<div class="row">
    <% if @question.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

          <ul>
            <% @question.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
              <%= "#{action_message} Pergunta" %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [:admins_backoffice, @question], local: true) do |f| %>
                            <div class="form-group">
                                <%= f.label :description %>
                                <%= f.text_area :description , placeholder: "Informe sua pergunta" , class: "form-control" , autofocus: true%>
                            </div>

                            <div class="form-group">
                                <%= f.label :subject_id %>
                                <%= f.select("subject_id", @subject_type_options, { include_blank: "Selecione..."}, class: "form-control") %>
                            </div>

                            <%= f.submit 'Salvar', class: "btn btn-default" %>
                        <% end %>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
