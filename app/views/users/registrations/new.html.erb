<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1><%= t('panel.sign_up') %></h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:t('fields.email'), class:"form-control"%>
          </div>
          <div>
            <%= f.password_field :password, placeholder:t('fields.password'), class:"form-control" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, placeholder:t('fields.password_confirmation'), class:"form-control" %>
          </div>
          <div class="">
            <%= f.submit t('button.sign_up'), class:"btn btn-default submit text-center",
              style: "float: none; margin-left: 0px; width: 50%;" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator">
            <p class="change_link">Já possui conta?
              <a href="#signup" class="to_register"><%= render 'users/shared/links' %></a>
            </p>

            <div class="clearfix"></div>
            <br />

            <div>
              <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
              <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>
