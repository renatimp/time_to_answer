<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
              <div class="text-center">
                <h3 class="panel-title"><%= t('panel.sign_in') %></h3>
              </div>
            </div>
            <div class="panel-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), role:"form") do |f| %>
                    <fieldset>
                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true, placeholder:t('fields.email'), class:"form-control" %>
                        </div>
                        <div class="form-group">
                          <%= f.password_field :password, placeholder:t('fields.password'), class:"form-control"%>
                        </div>
                        <div class="checkbox">
                            <label>
                                <%= f.check_box :remember_me %><%= t('checkbox.remember_me') %>
                            </label>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <%= f.submit t('button.sign_in'), class: "btn btn-lg btn-success btn-block" %>
                    </fieldset>
                <% end %>
            </div>
        </div>
    </div>
</div>
